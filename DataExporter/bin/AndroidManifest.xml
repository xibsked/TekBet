<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sked.dataexporter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sked.dataexporter.SMSList"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.sked.dataexporter.MessageThreads"
            android:label="@string/title_activity_message_threads" >
        </activity>
        <activity
            android:name="com.sked.dataexporter.Conversation"
            android:label="@string/title_activity_conversation" >
        </activity>
        <activity
            android:name="com.sked.dataexporter.DataExporter"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sked.dataexporter.Contacts"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="com.sked.dataexporter.CalendarEvents"
            android:label="@string/title_activity_calendar_events" >
        </activity>
        <activity
            android:name="com.sked.dataexporter.AllSentMessages"
            android:label="@string/title_activity_all_sent_messages" >
        </activity>
        <activity
            android:name="com.sked.dataexporter.AllReceivedMessages"
            android:label="@string/title_activity_all_received_messages" >
        </activity>
        <activity
            android:name="com.sked.dataexporter.AllMessages"
            android:label="@string/title_activity_all_messages" >
        </activity>
    </application>

</manifest>